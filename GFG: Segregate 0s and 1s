class Solution {
    void segregate0and1(int[] arr) {
        int ones = 0;
        int zeroes = 0;
        
        for(int ele : arr){
            if(ele == 0)    zeroes++;
            else    ones++;
        }
        
        for(int i = 0; i < arr.length; i++){
            if(zeroes > 0){
                arr[i] = 0;
                zeroes--;
            }
            else    arr[i] = 1;
        }
    }
}
